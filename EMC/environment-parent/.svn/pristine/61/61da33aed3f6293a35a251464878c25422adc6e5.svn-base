package com.beiup.thread;

import java.io.ObjectInputStream;
import java.net.Socket;
import java.util.Collection;

import com.beiup.db.DataStorageImpl;
import com.briup.bean.Environment;

/**
 * 多线程使服务器实现并行处理
 * 
 * @author ghost
 *
 */
public class MyThread extends Thread {
	public ObjectInputStream ois = null;
	public Socket socket = null;

	public MyThread(Socket socket) {
		super();
		this.socket = socket;
	}

	/**
	 * 处理服务端接收到的客户端连接 
	 * 1.用对象输入流反序列化数据集合 
	 * 2.调用入库方法把数据集合存储到数据库中
	 */
	@SuppressWarnings("unchecked")
	@Override
	public void run() {
		try {
			// 创建对象读取流
			ois = new ObjectInputStream(socket.getInputStream());
			Object object = ois.readObject();

			((Collection<Environment>)object).forEach(System.out::println);
			// 调用写入数据库的方法
			Collection<Environment> collection = ((Collection<Environment>)object);
			DataStorageImpl dataStorageImpl = new DataStorageImpl();
			dataStorageImpl.dataStorage(collection);
		} catch (Exception e) {
			e.printStackTrace();
		}
	}

}
