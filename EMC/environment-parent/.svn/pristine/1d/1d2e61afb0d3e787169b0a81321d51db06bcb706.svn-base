package com.briup.accept;

import java.io.ObjectInputStream;
import java.net.Socket;
import java.util.Collection;

import org.apache.log4j.Logger;

import com.briup.bean.Environment;
import com.briup.store.DataStorageImpl;
import com.briup.store.IDataStorage;

/**
 * 自定义线程类
 * 
 * @author ghost
 *
 */
public class MyThread extends Thread {
	public ObjectInputStream ois = null;
	public Socket socket = null;
	private static final Logger logger = Logger.getLogger(MyThread.class);
	/**
	 * 创建这样一个线程类就需要传入一个socket
	 * 
	 * @param socket
	 */
	public MyThread(Socket socket) {
		super();
		this.socket = socket;
	}

	/**
	 * 处理服务端接收到的客户端连接 
	 * 1.用对象输入流反序列化数据集合 
	 * 2.调用入库方法把数据集合存储到数据库中
	 */
	@SuppressWarnings("unchecked")
	@Override
	public void run() {
		/*
		 * 讲数据从socket里面把数据反序列化出来
		 */
		try {
			// 构建反序列化流
			ois = new ObjectInputStream(socket.getInputStream());
			Object object = ois.readObject();

//			((Collection<Environment>)object).forEach(System.out::println);
			// 调用写入数据库的方法
			logger.info("开始入库");
			Collection<Environment> collection = ((Collection<Environment>)object);
			IDataStorage dataStorage = new DataStorageImpl();
			dataStorage.dataStorage(collection);
			logger.info("入库成功");
			socket.close();
		} catch (Exception e) {
			e.printStackTrace();
		}
	}

}
